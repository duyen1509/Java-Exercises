package org.example;


public class Main {
    // Method tim phan tu lon nhat trong mang
    public static int findMax (int arr [])
    {
        int max = arr[0];
        for (int i=1; i<=arr.length;i++)
        {
            if (max < arr[i])
            {
                max=arr[i];
            }
        }
        return max;
    }
    public static void main (String [] args) {

        int array []={1,5,6,8};
        int check = findMax(array);
        System.out.println("The max number from list input:"+ check);


    }
}
